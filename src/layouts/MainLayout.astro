---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="pt-BR">
  <head>
    <!-- Metadados básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="A Constru Steel projeta e fabrica estruturas metálicas para galpões, residências, mezaninos, escadas, coberturas e reforços estruturais com qualidade, segurança e eficiência."
    />
    <meta
      name="keywords"
      content="estruturas metálicas, galpões metálicos, mezaninos metálicos, escadas metálicas, cobertura metálica, construção metálica, reforço estrutural, Constru Steel, fabricação de estruturas metálicas"
    />
    <meta name="author" content="Constru Steel" />

    <!-- Open Graph / Redes Sociais -->
    <meta
      property="og:title"
      content="Constru Steel | Estruturas Metálicas de Qualidade"
    />
    <meta
      property="og:description"
      content="Especialistas em estruturas metálicas sob medida. Projetamos e fabricamos galpões, residências, mezaninos, escadas e muito mais com excelência técnica e durabilidade."
    />

    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://www.construsteelestruturas.com.br/"
    />

    <meta
      property="og:image"
      content="https://www.construsteelestruturas.com.br/escada-og.jpg"
    />
    <meta
      property="og:image:alt"
      content="Estrutura de escada de aço Constru Steel"
    />

    <meta name="robots" content="index, follow" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.png" />

    <!-- Título da Página -->
    <title>
      Constru Steel | Estruturas Metálicas para Galpões, Casas e Mais
    </title>
  </head>
  <body class="bg-gradient-to-r from-[#FFFFFF] via-[#F0F0F0] to-[#999999]">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
